<div id="header" class="container">
  <div class="row">
    <nav class="navbar navbar-default">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse"
                  data-target="#bs-user-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>

          <%= link_to root_path, class: 'navbar-brand' do %>
              <span class="glyphicon glyphicon-th-large"></span>
              Quizzer
          <% end %>
        </div>

        <div class="collapse navbar-collapse" id="bs-user-navbar-collapse-1">
          <% if current_user %>
              <ul class="nav navbar-nav navbar-right">
                <li class="dropdown">
                  <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true"
                     aria-expanded="false">
                    <span class="glyphicon glyphicon-user"></span>
                    <%= current_user.email.split('@').first.capitalize %>
                    <span class="caret"></span></a>
                  <ul class="dropdown-menu">
                    <li><%= link_to 'Dashboard', dashboard_path %></li>
                    <li role="separator" class="divider"></li>
                    <li><%= link_to 'Sign out', destroy_user_session_path, method: :delete %></li>
                  </ul>
                </li>
              </ul>
          <% else %>
              <div class="nav navbar-nav navbar-right">
                <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-default navbar-btn' %>
                <%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-success navbar-btn' %>
              </div>
          <% end %>
        </div>
      </div>
    </nav>
  </div>
</div>
