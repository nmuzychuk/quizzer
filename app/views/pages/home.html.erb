<div class="col-lg-12">
  <div class="jumbotron">
    <div class="page-header text-center">
      <h1>Play Quizzes
        <small>for free</small>
      </h1>

      <% unless current_user %>
          <p><%= link_to 'Sign up', new_user_registration_path, class: 'btn btn-success' %> to build your own</p>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% Quiz.all.each do |quiz| %>
        <div class="col-lg-4">
          <div class="jumbotron">
            <h2><%= quiz.title %></h2>
            <p class="text-muted"><%= quiz.description %></p>
            <%= link_to 'Play', play_path(quiz), class: 'btn btn-lg btn-primary', data: {turbolinks: false} %>
          </div>
        </div>
    <% end %>
  </div>
</div>
