<div class="col-lg-3">
  <div class="panel panel-info">
    <div class="panel-heading">
      <h2>Dashboard</h2>
    </div>

    <div class="panel-body">
      <div class="media">
        <div class="media-left">
          <%= link_to dashboard_path do %>
              <!--<img class="media-object" src="..." alt="...">-->
              <div class="jumbotron">
                <h3>avatar</h3>
              </div>
          <% end %>
        </div>
      </div>

      <h4><%= current_user.email %></h4>
      <hr>
      <h6>Joined on <%= current_user.created_at %></h6>
    </div>
  </div>
</div>

<div class="col-lg-9">

  <% if true %>
      <div class="alert alert-info" role="alert">
        <strong>Notice!</strong> You have unpublished quizzes. They will not be available for other users.
      </div>
  <% end %>

  <div class="jumbotron text-center">
    <h2>You don't have any quizzes yet.</h2>
    <h4>Create a <%= link_to 'new quiz', new_quiz_path %> now.</h4>
  </div>
</div>
